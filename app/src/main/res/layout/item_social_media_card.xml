<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profile_card_top_margin"
        android:layout_marginStart="@dimen/profile_card_side_margin"
        android:layout_marginEnd="@dimen/profile_card_side_margin"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/profile_card_padding">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/profile_card_icon_size"
                android:layout_height="@dimen/profile_card_icon_size"
                android:layout_marginEnd="20dp"
                android:contentDescription="Icon"
                app:srcCompat="@color/color_black" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Username"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profile_card_font_size" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>