<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/profile_card_start_padding"
            android:paddingTop="@dimen/profile_SM_card_padding"
            android:paddingBottom="@dimen/profile_SM_card_padding"
            android:paddingEnd="@dimen/profile_card_start_padding">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/profile_card_SM_icon_size"
                android:layout_height="@dimen/profile_card_SM_icon_size"
                android:layout_marginEnd="20dp"
                android:contentDescription="Icon"
                app:srcCompat="@color/color_black" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Username"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profile_card_font_size" />
        </LinearLayout>

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tw__light_gray" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>