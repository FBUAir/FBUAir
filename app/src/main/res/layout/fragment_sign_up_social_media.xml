<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SignUpSocialMediaFragment">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvInstructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="@string/social_media_instructions"
                    android:textSize="16sp" />

                <TableLayout
                    android:id="@+id/tlIcons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvInstructions"
                    android:layout_centerHorizontal="true">

                    <TableRow>
                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llFacebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivFacebook"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="Facebook"
                                    android:src="@drawable/ic_facebook" />

                                <TextView
                                    android:id="@+id/tvFacebook"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Facebook" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivFacebookCheck"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/llFacebook"
                                android:contentDescription="Selected"
                                android:src="@drawable/ic_check_green"
                                android:visibility="gone" />
                        </RelativeLayout>

                            <RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/llInstagram"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ivInstagram"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center"
                                        android:contentDescription="Instagram"
                                        android:src="@drawable/ic_instagram" />

                                    <TextView
                                        android:id="@+id/tvInstagram"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Instagram" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/ivInstagramCheck"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignTop="@+id/llInstagram"
                                    android:layout_alignParentEnd="true"
                                    android:contentDescription="Selected"
                                    android:src="@drawable/ic_check_green"
                                    android:visibility="invisible"/>
                            </RelativeLayout>

                            <RelativeLayout>
                                <LinearLayout
                                    android:id="@+id/llTwitter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ivTwitter"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center"
                                        android:contentDescription="Twitter"
                                        android:src="@drawable/ic_twitter" />

                                    <TextView
                                        android:id="@+id/tvTwitter"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Twitter" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/ivTwitterCheck"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/llTwitter"
                                    android:contentDescription="Selected"
                                    android:src="@drawable/ic_check_green"
                                    android:visibility="invisible"/>
                            </RelativeLayout>
                    </TableRow>

                    <TableRow>
                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llSnapchat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivSnapchat"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="Snapchat"
                                    android:src="@drawable/ic_snapchat" />

                                <TextView
                                    android:id="@+id/tvSnapchat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Snapchat" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivSnapchatCheck"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/llSnapchat"
                                android:contentDescription="Selected"
                                android:src="@drawable/ic_check_green"
                                android:visibility="invisible"/>
                        </RelativeLayout>

                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llLinkedIn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivLinkedIn"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="LinkedIn"
                                    android:src="@drawable/ic_linkedin" />

                                <TextView
                                    android:id="@+id/tvLinkedIn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="LinkedIn" />
                            </LinearLayout>

                        <ImageView
                            android:id="@+id/ivLinkedInCheck"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/llLinkedIn"
                            android:contentDescription="Selected"
                            android:src="@drawable/ic_check_green"
                            android:visibility="invisible"/>
                        </RelativeLayout>

                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llGoogle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivGoogle"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="Google"
                                    android:src="@drawable/ic_google" />

                                <TextView
                                    android:id="@+id/tvGoogle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Google" />

                            </LinearLayout>

                        <ImageView
                            android:id="@+id/ivGoogleCheck"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/llGoogle"
                            android:contentDescription="Selected"
                            android:src="@drawable/ic_check_green"
                            android:visibility="invisible"/>
                        </RelativeLayout>
                    </TableRow>

                    <TableRow>
                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llWhatsApp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivWhatsApp"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="WhatsApp"
                                    android:src="@drawable/ic_whatsapp" />

                                <TextView
                                    android:id="@+id/tvWhatsApp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="WhatsApp" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivWhatsAppCheck"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/llWhatsApp"
                                android:contentDescription="Selected"
                                android:visibility="invisible"
                                android:src="@drawable/ic_check_green" />
                        </RelativeLayout>

                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llYoutube"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivYoutube"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center_horizontal"
                                    android:contentDescription="Youtube"
                                    android:src="@drawable/ic_youtube" />

                                <TextView
                                    android:id="@+id/tvYoutube"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Youtube" />

                            </LinearLayout>
                            <ImageView
                                android:id="@+id/ivYoutubeCheck"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/llYoutube"
                                android:contentDescription="Selected"
                                android:visibility="invisible"
                                android:src="@drawable/ic_check_green" />
                        </RelativeLayout>

                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llReddit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivReddit"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center_horizontal"
                                    android:contentDescription="Reddit"
                                    android:src="@drawable/ic_reddit" />

                                <TextView
                                    android:id="@+id/tvReddit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Reddit" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivRedditCheck"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/llReddit"
                                android:contentDescription="Selected"
                                android:visibility="invisible"
                                android:src="@drawable/ic_check_green" />
                        </RelativeLayout>
                    </TableRow>

                    <TableRow>
                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llPinterest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivPinterest"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="Pinterest"
                                    android:src="@drawable/ic_pinterest" />

                                <TextView
                                    android:id="@+id/tvPinterest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Pinterest" />
                            </LinearLayout>

                        <ImageView
                            android:id="@+id/ivPinterestCheck"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/llPinterest"
                            android:contentDescription="Selected"
                            android:visibility="invisible"
                            android:src="@drawable/ic_check_green" />
                        </RelativeLayout>

                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llTumblr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivTumblr"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center_horizontal"
                                    android:contentDescription="Tumblr"
                                    android:src="@drawable/ic_tumblr" />

                                <TextView
                                    android:id="@+id/tvTumblr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Tumblr" />
                            </LinearLayout>
                        <ImageView
                            android:id="@+id/ivTumblrCheck"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/llTumblr"
                            android:contentDescription="Selected"
                            android:visibility="invisible"
                            android:src="@drawable/ic_check_green" />
                        </RelativeLayout>

                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llSoundcloud"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivSoundcloud"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center_horizontal"
                                    android:contentDescription="Soundcloud"
                                    android:src="@drawable/ic_soundcloud" />

                                <TextView
                                    android:id="@+id/tvSoundcloud"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Soundcloud" />
                            </LinearLayout>

                        <ImageView
                            android:id="@+id/ivSoundcloudCheck"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/llSoundcloud"
                            android:contentDescription="Selected"
                            android:visibility="invisible"
                            android:src="@drawable/ic_check_green" />
                        </RelativeLayout>
                    </TableRow>

                    <TableRow>
                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llGithub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivGithub"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="Github"
                                    android:src="@drawable/ic_github" />

                                <TextView
                                    android:id="@+id/tvGithub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Github" />
                            </LinearLayout>

                        <ImageView
                            android:id="@+id/ivGithubCheck"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/llGithub"
                            android:contentDescription="Selected"
                            android:visibility="invisible"
                            android:src="@drawable/ic_check_green" />
                        </RelativeLayout>

                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llDeviantart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivDeviantart"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center_horizontal"
                                    android:contentDescription="Deviantart"
                                    android:src="@drawable/ic_deviantart" />

                                <TextView
                                    android:id="@+id/tvDeviantart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Deviantart" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivDeviantartCheck"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/llDeviantart"
                                android:contentDescription="Selected"
                                android:visibility="invisible"
                                android:src="@drawable/ic_check_green" />
                        </RelativeLayout>

                        <RelativeLayout>
                            <LinearLayout
                                android:id="@+id/llDribbble"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivDribbble"
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center_horizontal"
                                    android:contentDescription="Dribbble"
                                    android:src="@drawable/ic_dribbble" />

                                <TextView
                                    android:id="@+id/tvDribbble"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Dribbble" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivDribbbleCheck"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/llDribbble"
                                android:contentDescription="Selected"
                                android:visibility="invisible"
                                android:src="@drawable/ic_check_green" />
                        </RelativeLayout>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/tvRequestPlatform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tlIcons"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="@string/request_platforms_message"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvSkip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/btNext"
                    android:layout_alignParentStart="true"
                    android:text="SKIP" />

                <Button
                    android:id="@+id/btNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/tvRequestPlatform"
                    android:layout_marginTop="20dp"
                    android:text="Next" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</layout>