<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SignUpSocialMediaFragment">

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/social_media_instructions"
        android:textSize="16sp" />

    <TableLayout
        android:id="@+id/tlIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvInstructions">

        <TableRow>
            <LinearLayout
                android:id="@+id/llFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivFacebook"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:contentDescription="Facebook"
                    android:src="@drawable/ic_facebook" />

                <TextView
                    android:id="@+id/tvFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Facebook" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivInstagram"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:contentDescription="Instagram"
                    android:src="@drawable/ic_instagram" />

                <TextView
                    android:id="@+id/tvInstagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Instagram" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivTwitter"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:contentDescription="Twitter"
                    android:src="@drawable/ic_twitter" />

                <TextView
                    android:id="@+id/tvTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Twitter" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSnapchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivSnapchat"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:contentDescription="Snapchat"
                    android:src="@drawable/ic_snapchat" />

                <TextView
                    android:id="@+id/tvSnapchat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Snapchat" />

            </LinearLayout>

        </TableRow>

        <TableRow>

            <LinearLayout
                android:id="@+id/llLinkedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivLinkedIn"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:contentDescription="LinkedIn"
                    android:src="@drawable/ic_linkedin" />

                <TextView
                    android:id="@+id/tvLinkedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="LinkedIn" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivGoogle"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:contentDescription="Google"
                    android:src="@drawable/ic_google" />

                <TextView
                    android:id="@+id/tvGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Google" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWhatsApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivWhatsApp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:contentDescription="WhatsApp"
                    android:src="@drawable/ic_whatsapp" />

                <TextView
                    android:id="@+id/tvWhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="WhatsApp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llYoutube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivYoutube"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Youtube"
                    android:src="@drawable/ic_youtube" />

                <TextView
                    android:id="@+id/tvYoutube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Youtube" />

            </LinearLayout>

        </TableRow>

        <TableRow>

            <LinearLayout
                android:id="@+id/llReddit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivReddit"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Reddit"
                    android:src="@drawable/ic_reddit" />

                <TextView
                    android:id="@+id/tvReddit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Reddit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPinterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivPinterest"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:contentDescription="Pinterest"
                    android:src="@drawable/ic_pinterest" />

                <TextView
                    android:id="@+id/tvPinterest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Pinterest" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTumblr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivTumblr"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
