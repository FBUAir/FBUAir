                    android:layout_gravity="center_horizontal"
                    android:text="Tumblr" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSoundcloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivSoundcloud"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Soundcloud"
                    android:src="@drawable/ic_soundcloud" />

                <TextView
                    android:id="@+id/tvSoundcloud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Soundcloud" />

            </LinearLayout>

        </TableRow>

        <TableRow>

            <LinearLayout
                android:id="@+id/llGithub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivGithub"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:contentDescription="Github"
                    android:src="@drawable/ic_github" />

                <TextView
                    android:id="@+id/tvGithub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Github" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDeviantart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivDeviantart"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Deviantart"
                    android:src="@drawable/ic_deviantart" />

                <TextView
                    android:id="@+id/tvDeviantart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Deviantart" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDribbble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivDribbble"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Dribbble"
                    android:src="@drawable/ic_dribbble" />

                <TextView
                    android:id="@+id/tvDribbble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Dribbble" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBehance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ivBehance"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Behance"
                    android:src="@drawable/ic_behance" />

                <TextView
                    android:id="@+id/tvBehance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Behance" />

            </LinearLayout>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/tvRequestPlatform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btNext"
        android:layout_centerHorizontal="true"
        android:text="@string/request_platforms_message"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btNext"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:text="SKIP" />

    <Button
        android:id="@+id/btNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Next" />
</RelativeLayout>