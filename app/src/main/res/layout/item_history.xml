<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:padding="@dimen/profile_contact_card_padding">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCheck"
                android:layout_width="@dimen/history_profile_image_size"
                android:layout_height="@dimen/history_profile_image_size"
                android:layout_marginEnd="@dimen/profile_card_side_margin"
                android:src="@drawable/ic_checked_button"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="@dimen/history_profile_image_size"
                android:layout_height="@dimen/history_profile_image_size"
                android:layout_marginEnd="@dimen/profile_card_side_margin" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/card_subtitle_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/profile_card_font_size"
                    android:textStyle="bold"
                    tools:text="Mark Zuck" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/card_subtitle_font_size"
                    tools:text="Time Stamp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_subtitle_font_size"
                tools:text="Summary" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/tw__light_gray"/>

</RelativeLayout>