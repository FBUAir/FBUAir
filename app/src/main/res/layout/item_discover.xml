<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/profile_contact_card_padding">

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="@dimen/history_profile_image_size"
            android:layout_height="@dimen/history_profile_image_size"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/profile_card_side_margin" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/card_subtitle_margin"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/profile_card_font_size"
            android:textStyle="bold"
            tools:text="Mark Zuck" />

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pill_filled"
            android:text="Send"
            android:textColor="@color/color_white"
            app:finalCornerAngle="50dp"
            app:initialCornerAngle="0dp"
            app:spinning_bar_color="@color/gradient_blue_light"
            app:spinning_bar_width="6dp"/>

    </LinearLayout>

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/tw__light_gray" />

</RelativeLayout>

