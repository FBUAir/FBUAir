<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ivFacebookIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@android:color/black" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnProfileIImage"
            android:layout_below="@+id/etOrganization"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnProfileIImage"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:focusedByDefault="true"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/etOrganization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etName"
            android:ems="10"
            android:hint="Organization"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etPhone"
            android:layout_below="@+id/etPhone"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etFacebookURL"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etPhone"
            android:layout_below="@+id/etEmail"
            android:ems="10"
            android:hint="Facebook URL"
            android:inputType="textUri" />

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Create Profile" />

    <ImageView
        android:id="@+id/ivEmailIcon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_below="@+id/etPhone"
        android:layout_toStartOf="@+id/etPhone"
        app:srcCompat="@drawable/email_icon" />

        <ImageView
            android:id="@+id/ivFacebookIcon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_below="@+id/etEmail"
            android:layout_toStartOf="@+id/etPhone"
            app:srcCompat="@drawable/facebook_icon" />

        <ImageButton
            android:id="@+id/btnProfileIImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_launcher_round_grey"
            android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/ivPhoneIcon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/etPhone"
        android:layout_toStartOf="@+id/etPhone"
        app:srcCompat="@drawable/phone_icon" />


</RelativeLayout>

