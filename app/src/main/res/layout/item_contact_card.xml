<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/cvContactCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/profile_card_side_margin"
        android:layout_marginEnd="@dimen/profile_card_side_margin"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/profile_card_padding">

                <ImageView
                    android:id="@+id/ivPhoneIcon"
                    android:layout_width="@dimen/profile_card_icon_size"
                    android:layout_height="@dimen/profile_card_icon_size"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="Icon"
                    app:srcCompat="@drawable/call" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Phone"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/profile_card_font_size" />
            </LinearLayout>

            <View
                android:id="@+id/horizontalLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/tw__light_gray"/>

            <LinearLayout
                android:id="@+id/llEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/profile_card_padding">

                <ImageView
                    android:id="@+id/ivEmailIcon"
                    android:layout_width="@dimen/profile_card_icon_size"
                    android:layout_height="@dimen/profile_card_icon_size"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="Icon"
                    app:srcCompat="@drawable/email" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/profile_card_font_size" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>